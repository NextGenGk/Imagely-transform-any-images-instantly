{
  "name": "img-converter",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:apis": "powershell -ExecutionPolicy Bypass -File scripts/test-apis.ps1",
    "test:all": "npm run test && npm run test:features",
    "postinstall": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "deploy:db": "bash scripts/deploy-db.sh",
    "deploy:db:windows": "powershell -ExecutionPolicy Bypass -File scripts/deploy-db.ps1",
    "build:production": "prisma generate && prisma migrate deploy && next build",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run test",
    "health-check": "bash scripts/health-check.sh",
    "health-check:windows": "powershell -ExecutionPolicy Bypass -File scripts/health-check.ps1",
    "health-check:prod": "bash scripts/health-check.sh https://your-production-url.com"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.35.4",
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^6.19.0",
    "@tabler/icons-react": "^3.35.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "imagekit": "^6.0.0",
    "next": "^16.0.3",
    "prisma": "^6.19.0",
    "razorpay": "^2.9.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "autoprefixer": "^10.4.22",
    "fast-check": "^4.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "vitest": "^4.0.13"
  }
}
